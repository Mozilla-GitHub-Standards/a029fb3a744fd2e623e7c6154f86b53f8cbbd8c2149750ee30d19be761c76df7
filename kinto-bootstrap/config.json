{
  "collections": {
    "features": {
      "name": "Features",
      "config": {
        "displayFields": ["name", "buckets.min", "buckets.max"],
        "schema": {
          "type": "object",
          "required": ["name", "match", "buckets"],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "description": {
              "type": "string",
              "title": "Description"
            },
            "match": {
              "title": "Matching",
              "type": "object",
              "properties": {
                "appId": {
                  "title": "App ID",
                  "type": "string",
                  "description": "^org.mozilla.fennec|org.mozilla.firefox_beta|org.mozilla.firefox$"
                },
                "version": {
                  "title": "App Version",
                  "type": "string",
                  "description": "The Firefox app version number (e.g. 47.0a1', 46.0)"
                },
                "lang": {
                  "type": "string",
                  "description": "Language, pulled from the default locale (e.g. eng)"
                },
                "country": {
                  "type": "string",
                  "description": "Country, pulled from the default locale (e.g. USA)"
                },
                "device": {
                  "type": "string",
                  "description": "Android device name"
                },
                "manufacturer": {
                  "type": "string",
                  "description": "Android device manufacturer"
                }
              }
            },
            "buckets": {
              "title": "Buckets",
              "type": "object",
              "required": ["min", "max"],
              "properties": {
                "min": {
                  "type": "string",
                  "minLength": 1,
                  "pattern": "^0|100|[1-9][0-9]?$"
                },
                "max": {
                  "type": "string",
                  "minLength": 1,
                  "pattern": "^0|100|[1-9][0-9]?$"
                }
              }
            }
          }
        },
        "uiSchema": {
          "ui:order": [
            "name",
            "description",
            "match",
            "buckets"
          ],
	      "description": {
            "ui:widget": "textarea"
          },
          "id": {
            "ui:widget": "hidden"
          },
          "schema": {
            "ui:widget": "hidden"
          },
          "match": {
            "ui:order": [
              "appId",
              "version",
              "lang",
              "country",
              "device",
              "manufacturer"
            ]
          },
          "buckets": {
            "ui:order": [
              "min",
              "max"
            ]
          }
        }
      }
    }
  }
}
