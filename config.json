{
  "experiments": {
    "name": "Experiments",
    "synced": true,
    "config": {
      "displayFields": ["name", "description"],
      "liveValidate": true,
      "schema": {
        "type": "object",
        "required": ["name", "match", "bucket"],
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "description": {
            "type": "string",
            "title": "Description"
          },
          "match": {
            "type": "object",
            "properties": {
              "appId": {
                "type": "string",
                "description": "The Android app ID (e.g. org.mozilla.fennec)"
              },
              "version": {
                "type": "string",
                "description": "The Firefox app version number (e.g. 47.0a1', 46.0)"
              },
              "lang": {
                "type": "string",
                "description": "Language, pulled from the default locale (e.g. eng)"
              },
              "country": {
                "type": "string",
                "description": "Country, pulled from the default locale (e.g. USA)"
              },
              "device": {
                "type": "string",
                "description": "Android device name"
              },
              "manufacturer": {
                "type": "string",
                "description": "Android device manufacturer"
              }
            }
          },
          "bucket": {
            "type": "object",
            "required": ["min", "max"],
            "properties": {
              "min": {
                "type": "integer"
              },
              "max": {
                "type": "integer"
              }
            }
          }
        }
      },
      "uiSchema": {
        "description": {
          "ui:widget": "textarea"
        }
      }
    }
  }
}
